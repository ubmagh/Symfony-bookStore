<form method="post" style="display: inline-block; width: fit-content; margin-left: auto;" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this user ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="ui button btn red" type="submit"> <i class="trash alternate icon"></i> Delete</button>
</form>