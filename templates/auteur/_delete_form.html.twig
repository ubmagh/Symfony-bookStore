<form method="post" style="display: inline-block; width: fit-content; margin-left: auto;" action="{{ path('auteur_delete', {'id': auteur.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item? because if there are any books related only to this author, they will be deleted !');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ auteur.id) }}">
    <button class="ui button btn red" type="submit"> <i class="trash alternate icon"></i> Delete</button>
</form>
