{% if genre.livres|length>0 %}
    <form method="post" class="field" style="display: inline-block; width: fit-content; margin-left: auto;" action="#" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ genre.id) }}">
        <div class="ui  left red basic label ">
            Cannot delete genre while there are many books in it.
        </div>
    </form>
{% else %}
    <form method="post" style="display: inline-block; width: fit-content; margin-left: auto;" action="{{ path('genre_delete', {'id': genre.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ genre.id) }}">
        <button class="ui button btn red" type="submit"> <i class="trash alternate icon"></i> Delete</button>
    </form>
{% endif %}
