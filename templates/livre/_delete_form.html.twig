<form method="post" style="display: inline-block; width: fit-content; margin-left: auto;" action="{{ path('livre_delete', {'id': book.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
    <button class="ui button btn red" type="submit"> <i class="trash alternate icon"></i> Delete</button>
</form>
